{
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
      {
          "type": "TextBlock",
          "text": "Pågående röstning",
          "size": "ExtraLarge",
          "color": "Accent",
          "wrap": true
      },
      {
          "type": "TextBlock",
          "wrap": true,
          "text": "${title}"
      },
      {
          "type": "ColumnSet",
          "columns": [
              {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                      {
                          "type": "TextBlock",
                          "wrap": true,
                          "text": "${option1}",
                          "weight": "Bolder"
                      },
                      {
                          "type": "TextBlock",
                          "text": "${percentoption1}% av rösterna",
                          "horizontalAlignment": "Left",
                          "color": "Accent",
                          "size": "Small",
                          "wrap": true
                      }
                  ]
              },
              {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                      {
                          "type": "TextBlock",
                          "wrap": true,
                          "text": "${option2}",
                          "weight": "Bolder",
                          "horizontalAlignment": "Right"
                      },
                      {
                          "type": "TextBlock",
                          "wrap": true,
                          "text": "${percentoption2}% av rösterna",
                          "horizontalAlignment": "Right",
                          "color": "Accent",
                          "size": "Small"
                      }
                  ]
              }
          ]
      }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}